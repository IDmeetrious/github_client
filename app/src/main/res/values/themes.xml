<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubClient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/grey_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Splash   -->
    <style name="Theme.DialogFragment" parent="Theme.GithubClient">
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Search   -->
    <style name="Widget.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/rounded_text_field</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Widget.RepoItem.Layout" parent="Theme.GithubClient">
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/rounded_search_repo_item</item>
    </style>
</resources>