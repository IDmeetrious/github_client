<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="88dp"
    android:layout_width="match_parent"
    style="@style/Widget.RepoItem.Layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/downloaded_repo_item_login_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_repo_item_name_text"
            android:textColor="@color/blue_600"
            android:layout_marginBottom="4dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/downloaded_repo_item_repo_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_repo_item_uri_text"
            android:textSize="18sp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

